@using UniversityMgmtSystemClientConsuming.ViewModels;

@model StudentCourseVM;
@{
    ViewData["Title"] = "Enroll";
}

<h1>Student Enrollment for Courses</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Enroll">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StudentId" class="control-label"></label>
                <select asp-for="StudentId" class="form-control" asp-items="ViewBag.Students"><option disabled selected value="">Select</option></select>
            </div>
            <div class="form-group">
                <label asp-for="CouserId" class="control-label">Course</label>
                <select asp-for="CouserId" class="form-control" asp-items="ViewBag.Courses">  <option disabled selected value="">Select</option></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Enroll" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

