@model Course

<div class="Container">

	<div class="text-danger">

		<p class="text-danger">@ViewData["Error"]</p>
	</div>
<form asp-action="UpdateCourse">
<fieldset>
	<div class="form-group"  >
		<label>
		Id
		</label>
			<input class="form-control" asp-for="CourseId" disabled />
	</div>
	<div class="form-group"  >
		<label>
			Name
		</label>
			<input class="form-control" asp-for="CourseName"  />
	</div>
	<div class="form-group"  >
		<label>
			Number of Slot
		</label>
			<input class="form-control" asp-for="NumOfSlot" />
	</div>
	<div class="form-group"  >
		<label>
			Number of classes in Week
		</label>
			<input class="form-control" asp-for="NumOfClassPerWeek" />
	</div>	

	<div class="form-group"  >
		<label>
			Teacher Id
		</label>
			<input class="form-control" asp-for="TeacherId" />
	</div>	

	<button type="submit" class="btn btn-primary">Edit</button>


</fieldset>
</form>